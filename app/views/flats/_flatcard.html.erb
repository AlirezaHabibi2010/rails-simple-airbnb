<div class="m-2 col-6 col-lg-3 col-lg-2">
  <div class="card" style="width: 18rem; height: 12rem">
    <div class="card-body">
      <div class="bg-light">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"> <%= flat.address %>

        <br> <i class="fa-sharp fa-solid fa-users"></i> <%= flat.number_of_guests %>
        &nbsp
        <i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %>
        </p>
      </div>
      <%= link_to "More info", flat %>
      <%= link_to "Edit", edit_flat_path(flat) %>
      <%= link_to "Remove",
          flat_path(flat),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  </div>
</div>
